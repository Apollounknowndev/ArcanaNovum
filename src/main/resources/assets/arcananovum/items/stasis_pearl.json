            {
                "when": "stasis",
                "model": {
                    "type": "minecraft:model",
                    "model": "arcananovum:item/stasis_pearl_stasis"
                }
            },
            {
                "when": "flight",
                "model": {
                    "type": "minecraft:model",
                    "model": "arcananovum:item/stasis_pearl_flight"
                }
            }
